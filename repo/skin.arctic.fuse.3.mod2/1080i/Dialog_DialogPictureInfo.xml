                                <param name="label">$PARAM[header]</param>
                            </include>
                            <include>Part_Line</include>
                            <include>Part_CloseButton</include>
                        </control>
                        <control type="group">
                            <include>Size_Group_Body</include>
                            <include>$PARAM[include_picture]</include>
                        </control>
                    </control>

                    <control type="group">
                        <include>Part_Panel</include>
                        <right>0</right>
                        <width>520</width>
                        <control type="list" id="5">
                            <top>14</top>
                            <bottom>20</bottom>
                            <include>Size_Dialog_Pad</include>
                            <pagecontrol>61</pagecontrol>
                            <onright>61</onright>
                            <onleft>Close</onleft>
                            <orientation>vertical</orientation>
                            <itemlayout height="106">
                                <include>Layout_BasicMeta</include>
                            </itemlayout>
                            <focusedlayout height="106">
                                <include>Layout_BasicMeta</include>
                            </focusedlayout>
                            <include>$PARAM[include_items]</include>
                        </control>
                        <include content="Part_Scrollbar_Max">
                            <param name="id">61</param>
                            <param name="inset">false</param>
                            <include>$PARAM[include_movement]</include>
                        </include>
                    </control>
                </control>
            </control>
        </definition>
    </include>

    <include name="DialogPictureInfo_Image">
