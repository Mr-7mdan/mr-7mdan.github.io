                    </control>
                    <control type="group">
                        <include condition="![$PARAM[hasbuttons]]">Part_Panel</include>
                        <include condition="$PARAM[hasbuttons]">Part_Panel_Middle</include>
                        <include condition="$PARAM[hasbuttons]">Size_LeftGroup_Main</include>
                        <include>Size_RightGroup_Large</include>
                        <control type="group">
                            <include>Size_Group_Head</include>
                            <include content="Part_HeadText">
                                <param name="id">$PARAM[headerid]</param>
                                <param name="label">$VAR[Label_ProfileName]</param>
                            </include>
                            <include content="Part_ItemPage">
                                <param name="id">$PARAM[listid]</param>
                            </include>
                            <include>Part_CloseButton</include>
                        </control>
                        <control type="group">
                            <include>Size_Group_Body</include>
                            <include content="Object_Hidden_List" condition="![$PARAM[hasbuttons]]">
                                <param name="id">3</param>
                            </include>
                            <include content="List_Dialog">
                                <param name="id">$PARAM[listid]</param>
                                <param name="item_height">160</param>
                                <param name="itemlayout_include">List_Layout_Dialog_VideoVersions</param>
                                <param name="altfocus">ControlGroup(22900).HasFocus()</param>
                                <onfocus condition="$PARAM[hasbuttons]">SetFocus(22900)</onfocus>
                                <pagecontrol>61</pagecontrol>
                                <onright>61</onright>
                                <include>Size_Grouplist_Pad</include>
                            </include>
                            <control type="group">
                                <visible>$PARAM[hasbuttons]</visible>
                                <animation effect="slide" start="0" end="0,160" condition="Container($PARAM[listid]).Position(1)">Conditional</animation>
                                <animation effect="slide" start="0" end="0,320" condition="Container($PARAM[listid]).Position(2)">Conditional</animation>
                                <animation effect="slide" start="0" end="0,480" condition="Container($PARAM[listid]).Position(3)">Conditional</animation>
                                <animation effect="slide" start="0" end="0,640" condition="Container($PARAM[listid]).Position(4)">Conditional</animation>
                                <include>Size_Grouplist_Pad</include>
                                <control type="grouplist" id="22900">
                                    <orientation>horizontal</orientation>
                                    <itemgap>-8</itemgap>
                                    <onup>Control.Move($PARAM[listid],-1)</onup>
                                    <ondown>Control.Move($PARAM[listid],1)</ondown>
                                    <onright>61</onright>

                                    <height>64</height>
                                    <centertop>80</centertop>
                                    <onleft>noop</onleft>

                                    <align>right</align>
                                    <right>20</right>
                                    <include content="DialogSelect_Versions_Buttons">
                                        <param name="listid">$PARAM[listid]</param>
                                    </include>

                                    <include content="Animation_ConditionalFade">
                                        <param name="condition">!ControlGroup(22900).HasFocus()</param>
                                    </include>

                                </control>
                            </control>
                        </control>
                        <control type="group">
                            <include content="Part_Scrollbar">
                                <param name="id">61</param>
                                <onleft>$PARAM[listid]</onleft>
                                <onright>9000</onright>
                            </include>
                        </control>
                    </control>
                    <!-- Right -->
                    <include content="Part_Button_Grouplist" condition="$PARAM[hasbuttons]">
                        <param name="onleft">61</param>
                        <param name="items">DialogSelect_Versions_Items</param>
                    </include>
                </control>
            </control>
        </definition>
