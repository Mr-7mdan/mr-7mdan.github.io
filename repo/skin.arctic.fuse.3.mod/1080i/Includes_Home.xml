    <include name="Home_Control">
        <param name="onclick_condition">true</param>
        <definition>
            <control type="button" id="300">
                <height>200</height>
                <texturenofocus />
                <texturefocus />
                <onleft>$VAR[Home_$PARAM[window]_onleft]</onleft>
                <onleft>SetFocus(300)</onleft>
                <onright>$VAR[Home_$PARAM[window]_onright]</onright>
                <onright>SetFocus(300)</onright>
                <onfocus>SetProperty(HomeSwitcher.IsVisible,True,Home)</onfocus>
                <onfocus condition="$PARAM[overlay]">SetProperty(InfoPanel.FullSwitch,Wall,Home)</onfocus>
                <onfocus condition="![$PARAM[overlay]]">ClearProperty(InfoPanel.FullSwitch,Home)</onfocus>
                <onfocus condition="$PARAM[overlay]">SetProperty(Background.ShowOverlay,True,Home)</onfocus>
                <onfocus condition="![$PARAM[overlay]]">ClearProperty(Background.ShowOverlay,Home)</onfocus>
                <onclick condition="$PARAM[onclick_condition] + !String.IsEmpty(Skin.String(HomeSwitcher.$PARAM[window].Shortcut.Target))">ActivateWindow($INFO[Skin.String(HomeSwitcher.$PARAM[window].Shortcut.Target)],$INFO[Skin.String(HomeSwitcher.$PARAM[window].Shortcut.Path)],return)</onclick>
                <onclick condition="$PARAM[onclick_condition] + String.IsEmpty(Skin.String(HomeSwitcher.$PARAM[window].Shortcut.Target))">$INFO[Skin.String(HomeSwitcher.$PARAM[window].Shortcut.Path)]</onclick>
                <onclick condition="Window.IsVisible(1108)">ActivateWindow(addonbrowser)</onclick>
                <onclick condition="Window.IsVisible(1107)">ActivateWindow(tvchannels)</onclick>
                <nested />
            </control>
            <control type="image">
                <include>Home_Fade_Animation</include>
                <visible>!String.IsEmpty(Window(Home).Property(HomeSwitcher.IsVisible))</visible>
                <texture colordiffuse="main_bg_70">background/combined_topmenu.png</texture>
                <bottom>0</bottom>
            </control>
        </definition>
    </include>

    <include name="Home_Animation">
        <!-- <animation effect="slide" start="0,-200" end="0" time="400" delay="100" tween="cubic" easing="out">Visible</animation>
        <animation effect="slide" end="0,-200" start="0" time="400" tween="cubic" easing="out">Hidden</animation> -->
        <animation effect="fade" start="0" end="100" time="400" delay="200" tween="cubic" easing="out">Visible</animation>
        <animation effect="fade" end="0" start="100" time="200" tween="cubic" easing="out">Hidden</animation>
    </include>
    <include name="Home_Fade_Animation">
        <animation effect="fade" start="0" end="100" time="400" tween="cubic" easing="out">Visible</animation>
        <animation effect="fade" end="0" start="100" time="200" tween="cubic" easing="out">Hidden</animation>
    </include>
    <include name="Home_Slide_Animation">
        <animation effect="slide" start="0,-200" end="0" time="400" tween="cubic" easing="out" reversible="false" condition="!String.IsEmpty(Window(Home).Property(HomeSwitcher.IsVisible))">Conditional</animation>
