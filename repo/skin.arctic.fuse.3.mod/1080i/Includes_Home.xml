                    <visible>Window.IsVisible($PARAM[window]) + Integer.IsEqual(System.CurrentControlID,300)</visible>
                    <control type="image">
                        <include>Texture_Menu_Highlight_H</include>
                    </control>
                    <control type="image">
                        <include>Home_Grouplist_Icon_Definition</include>
                        <texture background="true" colordiffuse="$VAR[ColorSelected]">$PARAM[icon]</texture>
                    </control>
                </control>
            </control>
        </definition>
    </include>

    <include name="Home_Grouplist_Name">
        <definition>
            <control type="togglebutton">
                <font>font_main_bold</font>
                <textcolor>main_fg_30</textcolor>
                <focusedcolor>$VAR[ColorSelected]</focusedcolor>
                <label>$PARAM[name]</label>
                <altlabel>[COLOR=$VAR[ColorSelected]]$PARAM[name][/COLOR]</altlabel>
                <height>80</height>
                <width>auto</width>
                <centertop>50%</centertop>
                <onclick>ReplaceWindow($PARAM[window])</onclick>
                <include>Texture_Highlight_ToggleButton_FakeFocus_H</include>
                <usealttexture>Window.IsVisible($PARAM[window]) + Integer.IsEqual(System.CurrentControlID,300)</usealttexture>
            </control>
        </definition>
    </include>
    <include name="Home_Grouplist_Name_Spacer">
        <param name="use_icons">Skin.HasSetting(HomeSwitcher.EnableIcons)</param>
        <definition>
            <control type="button">
                <font>font_main_bold</font>
                <textcolor>00ffffff</textcolor>
                <focusedcolor>00ffffff</focusedcolor>
                <label>$PARAM[name]</label>
                <height>80</height>
                <include content="Object_Width" condition="$PARAM[use_icons]">
                    <param name="width">90</param>
                </include>
                <width>auto</width>
                <centertop>50%</centertop>
                <texturenofocus />
                <texturefocus />
                <visible>$PARAM[visible]</visible>
            </control>
        </definition>
    </include>


    <include name="Home_Grouplist_Icon_Definition">
