<?xml version="1.0" encoding="UTF-8"?>
<window type="window" id="1107">
    <include content="Hub_Onload" condition="!String.IsEmpty(Skin.String(HomeSwitcher.1107.Toggle))">
        <param name="window_id">1107</param>
    </include>
    <include content="Hub_Disabled_Onload" condition="String.IsEmpty(Skin.String(HomeSwitcher.1107.Toggle))">
        <param name="defaultcontrol">601</param>
    </include>
    <controls>

        <include content="Object_Hidden_List">
            <param name="id">509</param>
            <content>pvr://channels/tv/</content>
        </include>

        <include>Background</include>

        <include>Hub_Window_Refocus_Buttons</include>

        <include content="Home_Control" condition="!String.IsEmpty(Skin.String(HomeSwitcher.1107.Toggle))">
            <param name="window">1107</param>
            <param name="overlay">true</param>
            <onup>ActivateWindow(1181)</onup>
            <oninfo>ActivateWindow(1181)</oninfo>
            <ondown>$VAR[Hub_Action_Down]</ondown>
            <onback condition="Player.HasMedia">SetProperty(FullscreenRefocus,SetFocus(300))</onback>
            <onback condition="Player.HasMedia">309</onback>
            <onback condition="!Player.HasMedia">303</onback>
        </include>

        <control type="group">
            <include>Animation_Group_Bumper</include>

            <include condition="String.IsEmpty(Skin.String(HomeSwitcher.1107.Toggle))">Hub_Addons_Info</include>

            <include content="Hub_Widget_Switcher">
                <param name="home_switcher">true</param>
                <param name="include_content">Hub_PVR_Items</param>
            </include>

            <!-- Widgets Groups -->
            <control type="group" id="500">
                <include content="Hub_Combined_Widgets_Grouplist">
                    <include>Hub_PVR_Widgets</include>
                </include>
            </control>

            <control type="group">
                <include>Furniture_Reposition</include>
                <visible>!$EXP[Exp_InfoDialogs]</visible>
                <include>Furniture_Footer_Right</include>
            </control>

            <!-- <include condition="!String.IsEmpty(Skin.String(HomeSwitcher.1107.Toggle))">Home_Switcher</include> -->
        </control>


    </controls>
</window>